+  if(_relative STREQUAL "")
+    set(_relative ".")
+  endif()
+
+  install(
+    TARGETS ${_name}
+    LIBRARY DESTINATION "${_relative}"
+    RUNTIME DESTINATION "${_relative}"
+  )
+endfunction()
