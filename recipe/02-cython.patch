+    SOURCES ${_args_SOURCES}
+    INCLUDE_DIRECTORIES ${_args_INCLUDE_DIRECTORIES}
+    LINK_LIBRARIES ${_args_LINK_LIBRARIES}
+    COMPILE_DEFINITIONS ${_args_COMPILE_DEFINITIONS}
+    DEPENDS ${_args_DEPENDS}
